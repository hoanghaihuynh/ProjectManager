<div class="mt-4">
    <h3 class="text-big display-center">Tạo Món</h3>
      <form  method="POST" action="/admin/staff/store">
            <div class="form-group">
                <label class="text mt-4 " for="name">Name</label>
                <input type="text" class="form-control" id="staffName" name="name" placeholder="Enter name of staff">
            </div>
            <div class="form-group">
                <label class="text mt-4" for="price">Email</label>
                <input type="text" class="form-control" id="staffPrice" name="email" placeholder="Enter email of staff">
            </div>
            <div class="form-group">
                <label class="text mt-4" for="img">Image</label>
                <input type="text" class="form-control" id="staffImg" name="img" placeholder="Enter img of staff">
            </div>
            <div class="form-group">
                <label class="text mt-4" for="type">Phone number</label>
                <input type="number" class="form-control" id="staffPhoneNumber" name="numberPhone" placeholder="Enter phone number of staff">
            </div>
            <div class="form-group">
                <label class="text mt-4" for="type">Birthday</label>
                <input style="width:200px" type="date" class="form-control form-control-date  " id="staffBirthday" name="birthday" placeholder="Enter birthday of staff">
            </div>
            <div class="form-group">
                <label class="text mt-4" for="type">Sex</label>
                <select style="width:200px" class="form-control" id="staffSex" name="sex">
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Other</option>
                </select>
            </div>
             <div class="form-group">
                <label class="text mt-4" for="type">Address</label>
                <input type="text" class="form-control" id="staffSex" name="address" placeholder="Enter phone sex of staff">
            </div>
            <button type="submit" class="btn btn-primary backgound-color mt-4 text-color">Thêm Nhân Viên</button>
        </form>
</div>
<script>
    document.getElementById('staffSex').value = "{{Staff.sex}}";
</script>