<div class="mt-4">
    <div class="row">
         <div class="col-3">
            <div class="row">
               <div class="container-cate">
                <div class="cate">
                 <div class="cate-heading">
                    <p class="text-big">Danh mục</p>
                </div>
                <ul>
                    <li class="cate-item cate-item-hover">
                        <a href="/admin/me/stored/ingredient"><i class="fa-solid fa-cloud-arrow-up"></i>  Đã mua</a>
                    </li>
                    <li class="cate-item cate-item-hover">
                        <a href="/admin/ingredient/create"><i class="fa-solid fa-plus"></i>  Thêm</a>
                    </li>
                    <li class="cate-item cate-item-hover">
                        <a href="/admin/me/stored/ingredient"><i class="fa-solid fa-eraser"></i>  Xóa</a>
                    </li>
                    <li class="cate-item cate-item-hover">
                        <a href="/admin/me/stored/ingredient"><i class="fa-solid fa-wrench"></i>  Sửa</a>
                    </li>
                </ul>
               </div>
               </div>
            </div>
         </div>
         <div class="col-9 ">
            <div class="row">
            <div id="caffee" class="row">
                <p class="type-item">LIST INGREDIENTS</p>
            </div>
            {{#each ingredients}}
                <div class="col-12 col-md-4 col-lg-4 col-xl-3 col-xxl-3 ">      
                    <div class="card-container" style="height: auto;">
                        <div class="card card-img">
                            <img style="height: 130px;" src="{{this.img}}" class="card-img-top" alt="{{this.name}}">
                        <div class="card-body card-text">
                            <p class="card-text text-sm display-center">{{this.name}}</p>
                        </div>
                        <div class="card-body card-text">
                            <p class="card-text text-sm display-center" style="color: red;">{{this.price}} VND</p>
                        </div>
                        <div class="card-body card-text">
                            <p class="card-text text-sm display-center">{{this.quantity}} kg</p>
                        </div>
                        <div class="card-body card-text">
                            <p class="card-text text-sm display-center">
                                Hạn sử dụng: {{formatDate this.expiryDate}}
                            </p>
                            <p class="card-text text-sm display-center status-{{this.status}}">
                                {{this.status}}
                            </p>
                        </div>
                        </div>
                    </div>          
                </div>
            {{/each}}
         </div>
    </div>
</div>

<style>
    .status-expired {
        color: red;
    }
    .status-expiring-soon {
        color: orange;
    }
    .status-fresh {
        color: green;
    }
</style>
